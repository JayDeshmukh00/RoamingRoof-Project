<% layout("/layouts/boilerplate") %>

<style>
  /* --- General Body & Background --- */
  body {
    background-color: #f8f9fa; /* Fallback */
    background-image: linear-gradient(135deg, #ffffff 0%, #f0f2f5 100%);
    font-family: 'Inter', 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  }

  /* --- The Main Authentication Card --- */
  .auth-card {
    background-color: #ffffff;
    border: 1px solid #e9ecef;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.07);
    transition: transform 0.3s ease-in-out;
  }
  .auth-card:hover {
    transform: translateY(-5px);
  }

  /* --- Eye-Catching Gradient Icon (Cool Blue) --- */
  .gradient-icon {
    background: linear-gradient(45deg, #3B82F6, #60A5FA);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }

  /* --- Modern Form Styling (Cool Blue) --- */
  .form-control:focus {
    border-color: #3B82F6;
    box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.2);
  }

  .form-floating > label {
    color: #6c757d;
  }

  /* --- Button Styling (Cool Blue) --- */
  .btn-brand {
    background-color: #3B82F6;
    border-color: #3B82F6;
    color: #fff;
    padding: 0.75rem 1rem;
    transition: background-color 0.2s ease-in-out, transform 0.2s ease;
  }
  .btn-brand:hover {
    background-color: #2563EB;
    border-color: #1D4ED8;
    color: #fff;
    transform: scale(1.02);
  }
  .link-brand {
      color: #3B82F6;
      text-decoration: none;
      font-weight: 600;
  }
  .link-brand:hover {
      color: #2563EB;
  }

</style>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="col-lg-5 col-md-8 col-sm-10">

    <div class="card auth-card border-0 rounded-4">
      <div class="card-body p-4 p-md-5">

        <div class="text-center mb-4">
          <i class="fas fa-mountain-sun fa-3x mb-3 gradient-icon"></i>
          <h2 class="fw-bold text-dark">Join Roaming Roof</h2>
          <p class="text-muted">Create an account to start your journey.</p>
        </div>

        <form action="/signup" method="post" class="needs-validation" novalidate>

          <div class="form-floating mb-3">
            <input name="username" id="username" type="text" class="form-control" placeholder="username" required />
            <label for="username">Username</label>
            <div class="valid-feedback">Looks good!</div>
          </div>

          <div class="form-floating mb-3">
            <input name="email" id="email" type="email" class="form-control" placeholder="name@example.com" required />
            <label for="email">Email</label>
          </div>

          <div class="form-floating mb-4">
            <input name="password" id="password" type="password" class="form-control" placeholder="password" required />
            <label for="password">Password</label>
          </div>

          <div class="d-grid mt-4">
            <button class="btn btn-brand btn-lg fw-bold" type="submit">Create Account</button>
          </div>
        </form>

        <hr class="my-4">

        <div class="text-center">
          <p class="text-muted">
            Already have an account? <a href="/login" class="link-brand">Log In</a>
          </p>
        </div>

      </div>
    </div>
  </div>
</div>