<div class="row">
  
  <% if (typeof success !== 'undefined' && success.length) { %>
  <div class="alert alert-success mt-3 col-md-6 offset-3 alert-dismissible fade show">
    <%= success[0] %>
    <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
    >
      
    </button>
  </div>
<% } %>
</div>

<div class="row">
  
  <% if (typeof error !== 'undefined' && error.length) { %>
  <div class="alert alert-danger mt-3 col-md-6 offset-3 alert-dismissible fade show">
    <%= error[0] %>
    <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
    >
      
    </button>
  </div>
<% } %>
</div>