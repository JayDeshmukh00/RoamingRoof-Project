<% layout("/layouts/boilerplate") %>

<style>
  .custom-container {
    max-width: 900px;
    margin: 2rem auto;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 12px;
    box-shadow: 0 6px 12px rgba(0,0,0,0.1);
  }
</style>

<body>
  <div class="custom-container">
    <h3>Edit this listing</h3>

    <form action="/listings/<%=listing._id%>?_method=put" method="post" novalidate class="needs-validation" enctype="multipart/form-data">

      <div class="mt-3">
        <label for="title" class="form-label"><b>Title</b></label>
        <input type="text" name="listing[title]" placeholder="Enter the title" class="form-control" value="<%=listing.title%>" required>
        <div class="valid-feedback">Title looks good</div>
      </div>

      <div class="mt-3">
        <label for="description" class="form-label"><b>Description</b></label>
        <textarea name="listing[description]" placeholder="Give Description" class="form-control" required><%=listing.description%></textarea>
        <div class="invalid-feedback">Please provide description</div>
      </div>

      <div class="mt-3">
        <label class="form-label"><b>Current Images</b></label>
        <div class="row">
          <% listing.images.forEach(image => { %>
            <div class="col-md-4 mb-3">
              <img src="<%= image.url %>" alt="Listing Image" style="height: 200px; width: 100%; object-fit: cover; border-radius:10px">
            </div>
          <% }); %>
        </div>
      </div>

      <div class="mt-3">
        <label for="images" class="form-label"><b>Upload Additional Images (select multiple)</b></label>
        <input type="file" name="images" class="form-control" multiple>
      </div>

      <div class="row">
        <div class="col-md-8 mt-3">
          <label for="location" class="form-label"><b>Location</b></label>
          <input type="text" name="listing[location]" placeholder="Enter Location" class="form-control" value="<%=listing.location%>" required>
          <div class="invalid-feedback">Please enter location</div>
        </div>

        <div class="col-md-4 mt-3">
          <label for="country" class="form-label"><b>Country</b></label>
          <input type="text" name="listing[country]" placeholder="Enter Country" class="form-control" value="<%=listing.country%>" required>
          <div class="invalid-feedback">Enter the country field</div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mt-3">
          <label for="price" class="form-label"><b>Price</b></label>
          <input name="listing[price]" placeholder="Enter Price" class="form-control" value="<%=listing.price%>" required>
          <div class="invalid-feedback">Enter the price in correct format</div>
        </div>

        <div class="col-md-6 mt-3">
          <label for="category" class="form-label"><b>Category</b></label>
          <% const categories = ["Trending", "Apartments", "Pools", "Farm House", "Villas", "Cottage", "Mountains", "Beachfront", "Heritage", "Resorts", "Cabins", "Castles"]; %>
          <select name="listing[category]" class="form-select" id="category" required>
            <% for(let category of categories) { %>
              <option value="<%= category %>" <%= (listing.category === category) ? 'selected' : '' %>>
                <%= category %>
              </option>
            <% } %>
          </select>
          <div class="invalid-feedback">Please select a category</div>
        </div>
      </div>
      <div class="mt-4 text-center">
        <button class="btn btn-danger px-4">Save</button>
      </div>

    </form>
  </div>
</body>
