<%layout("/layouts/boilerplate")%>
<body>
    <div class="row offset-3">
    <div class="col-8">

    <h3>Listing Details</h3>
    <div class="card listing-card">
        <img src="<%=listing.image%>" class="card-img-top" alt="listing-img" style="height:20rem">
        <div class="card-body">
          <p class="card-text">
         <p><b>Title:</b><b><%=listing.title%></b> </p>   
            <p><b>Location:</b><%=listing.location%></p>
            <p><b>Country:</b><%=listing.country%> </p>
            <p><b>Description:</b><%=listing.description%></p>
           <p><b>Price:</b>&#8377;<b><%=listing.price.toLocaleString("en-IN")%></b>/night.</p>
           <div class="show-btn">
            <form action="/listings/<%=listing._id%>/edit">
                <button class="btn btn-danger ">edit this listing</button>
            </form>
            <form action="/listings/<%=listing._id%>?_method=delete"method="post">
                <button class=" btn btn-danger">delete this listing</button>
            </form>
        </div >
        <div>
            <hr>
            <h4>leave a review</h4>
            <form action="/listings/<%= listing._id%>/reviews"method="post" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range"min="1" max="5" id="rating" name="review[rating]"class="form-range">
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
                    <div class="invalid-feedback">please add a comment to review</div>
                </div>
                
                <button class="btn btn-outline-dark">
                    Submit

                </button>
            </form>
            <hr>
         <h5><b>Reviews by our verified users</b></h5>
         <div class="row">
            <% for(review of listing.reviews){%>
   <div class="card col-5 ms-3 mb-3 mt-3">
    <div class="card-body">
    <h5 class="card-title">Jay Deshmukh</h5>
   
    <p class="card-text"><%=review.comment%></p>
     <p class="card-text"><%=review.rating%></p>
<form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=delete" class="mb-3"method="post">
    <button class="btn btn-sm mt-3 btn-dark">Delete</button>
</form>


            </div>
         </div>
       <% }%>
         </div>

        
          
        </div>
        
        </div>
      </div>


</div>
</div>
</body>
