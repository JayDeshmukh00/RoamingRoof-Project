<%layout("/layouts/boilerplate")%>
<body>
<h3>All Listings</h3>
<div class="row row-cols-lg-3  row-cols-md-2 row-cols-sm-1 g-4">
<%for(let listing of allListings){%>
  <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card" >
        <img src="<%=listing.image%>" class="card-img-top" alt="listing-imag" style="height:20rem">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text"><b>Title:<%=listing.title%></b> <br><b>Location:</b><%=listing.location%> <br><b>Country:</b><%=listing.country%> <br><b>Price:</b>&#8377;<%=listing.price.toLocaleString("en-IN")%></p>
        </div>
      </div>
    </a>
    <%}%>
</div>
</body>

