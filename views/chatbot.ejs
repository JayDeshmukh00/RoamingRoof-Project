<% layout("/layouts/boilerplate") %>

<div class="chatbot-fullscreen">
    <!-- Chatbot Header -->
    <div class="chatbot-page-header">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center">
                <div class="chatbot-avatar">
                    <i class="fas fa-robot"></i>
                </div>
                <div class="ms-3">
                    <h2 class="mb-0">RoamingRoof AI Assistant</h2>
                    <p class="mb-0 text-muted small">Ask me about properties, bookings, or anything else!</p>
                </div>
            </div>
            <div class="chatbot-status">
                <span class="badge bg-success">Online</span>
            </div>
        </div>
    </div>

    <!-- Chat Container -->
<div class="chatbot-page-container">
        <div id="chat-messages" class="chat-messages">
            <!-- Messages will appear here -->
        </div>

        <!-- Input Area -->
        <div class="chatbot-input-area">
            <div class="input-container">
                <input type="text" id="user-input" placeholder="Type your message here..." autocomplete="off" />
                <button id="send-button" type="button">
                    <i class="fas fa-paper-plane"></i>
                </button>
            </div>
            <div class="input-hint" style="display:none;">
                <small class="text-muted">Try: "Show me villas in Paris" or "Help me book a property"</small>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/chatbot.js"></script>
